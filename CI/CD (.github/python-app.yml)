name: Python application

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: 3.11
      - run: pip install -r requirements.txt
      - run: flake8 . --max-line-length=120
      - run: pytest --maxfail=1 --disable-warnings -q
